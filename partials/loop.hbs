<div class="wrapper-content">
    <div class="col-md-7 col-lg-7">
        
{{#foreach posts}}

<article class="{{post_class}}">

<div class="loop-content">
       <header class="post-header">
        <div class="post-tags">{{tags}}</div>
             <h1><a href="{{url}}">{{title}}</a></h1>
        </header>
        {{content words="20"}}

         <div class="post-add">
            {{#author}}
            <div class="post-add-author"><img src="{{img_url profile_image}} "> </div>
            <div class="post-add-name"><a href="{{url}}">{{name}} </a> </div>
            {{/author}}
            <time datetime="{{date published_at timeago="true"}}">{{date published_at timeago="true"}}</time>
        </div>

</div>

       

 <div class="clearfix"></div>
</article>
{{/foreach}}
</div>

<div class="col-md-5 sidebar">
    <div class="about widget">
        <h3>Featured Post</h3>
        {{#get "posts" limit="all" filter="featured:true"}}
    {{#foreach posts}}
        <div class="featured-post">
          {{#if feature_image}} <img src="{{img_url feature_image}}">{{/if}}
        <h3><a href="{{url}}">{{title}}</a></h3>
        <div class="clearfix"></div>
    </div>

    {{/foreach}}
{{/get}}
    </div>

     <div class="text widget">
        <h3>Text</h3>
    Buy this theme now only $10. <a href="http://www.malvouz.com/2016/05/17/iris-ghost-theme/">Click Here</a>.
    </div>
    <div class="tags widget">
        <h3>Tags</h3>
    {{#get "tags"  limit="all"}}{{tags separator=""}}{{/get}}
    </div>

    <div class="instagram-widget widget"><h3>Instagram</h3></div>
</div>

</div> <!-- wrapper-content -->
{{! Previous/next page links - displayed on every page }}
<div class="pagination">
{{pagination}}
</div>